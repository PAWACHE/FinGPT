  <script>
    document.getElementById('assessmentForm').addEventListener('submit', function (e) {
      e.preventDefault();
      const form = e.target;

      const fields = [
        'save_regularly',
        'save_income',
        'track_spending',
        'impulse_control',
        'credit_score',
        'pay_on_time',
        'financial_goals',
        'invest_knowledge'
      ];

      let score = 0;

      fields.forEach(field => {
        const value = form[field].value;
        if (value === 'Strongly Agree') score += 2;
        else if (value === 'Agree') score += 1;
      });

      let rating = '';
      let suggestions = [];

      if (score >= 13) {
        rating = 'Excellent üí™';
        suggestions = [
          'Keep contributing regularly to your savings. <a href="#">[Read More]</a>',
          'Consider automating your investments. <a href="#">[Explore Options]</a>',
          'Stay updated on investment trends. <a href="#">[Learn Here]</a>',
          'Review your credit report yearly. <a href="#">[Credit Tips]</a>'
        ];
      } else if (score >= 8) {
        rating = 'Good üëç';
        suggestions = [
          'Track your monthly expenses using a tool. <a href="#">[Try This Tool]</a>',
          'Set SMART financial goals. <a href="#">[Goal Setting Guide]</a>',
          'Build an emergency fund. <a href="#">[Emergency Fund Basics]</a>',
          'Start exploring SIPs and FDs. <a href="#">[Investment 101]</a>',
          'Improve your credit score with timely payments. <a href="#">[Credit Score Tips]</a>'
        ];
      } else {
        rating = 'Needs Attention üö®';
        suggestions = [
          'Create a monthly budget. <a href="#">[Budget Starter]</a>',
          'Avoid impulse purchases using the 24-hour rule. <a href="#">[Money Discipline]</a>',
          'Save at least 5-10% of your income. <a href="#">[Saving Plan]</a>',
          'Understand debt and interest. <a href="#">[Debt Management]</a>',
          'Set at least one short and long-term goal. <a href="#">[Financial Planning Basics]</a>'
        ];
      }

      document.getElementById('scoreLabel').innerText = `Your Financial Score: ${rating}`;

      const listElement = document.getElementById('recommendationList');
      listElement.innerHTML = '';
      suggestions.forEach(suggestion => {
        const li = document.createElement('li');
        li.innerHTML = `‚úÖ ${suggestion}`;
        listElement.appendChild(li);
      });

      document.getElementById('result').classList.remove('hidden');
    });
  </script>

